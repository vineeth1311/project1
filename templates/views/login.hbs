<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    {{>navbar}}

    <div class="container my-4">
        <h2 class="text-center">Login Form</h2>
           <div class="form-group">
                                            <input type="text" id="name" class="form-control" placeholder="Name *" value=""
                                            name="name" />
                                        </div>
                                         <div class="form-group">
                                            <input type="password" id="pass" class="form-control" placeholder="Password *" value=""
                                            name="password" />
                                        </div>
                                        <button type="submit" id="add" class="btn btn-primary">Login</button>
                                        </div>
                                        <script>
                                            add = document.getElementById("add");
                                            add.addEventListener("click", () => {
                                                 nam = document.getElementById("name").value;
                                                pass = document.getElementById("pass").value;

                                                const name1 = localStorage.getItem("name1");
                                                const pass1 = localStorage.getItem("pass1");

                                                if(nam==name1 && pass==pass1){
                                                    window.location.href="/movie";
                                                }
                                                else{
                                                    alert("name or password is incorrect")
                                                }
                                                
                                            });
                                        </script>
</body>
</html>